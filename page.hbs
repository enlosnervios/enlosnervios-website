{{!< default}}

<div id="wrapper" class="content-fluid">
    <div class="row">

        {{> "sidebar"}}

        <div id="main" class="col-lg-8 col-lg-offset-1">

            {{> "menu"}}

            <div id="content" class="col-lg-12 col-lg-offset-3">
                <article class="{{post_class}}">
                    {{#post}}
                        <div class="page-header">
                            <h1>{{title}}</h1>
                        </div>
                        <section class="post">
                            {{content}}
                        </section>
                    {{/post}}
                </article>
            </div>

        </div>
    </div>
</div>

